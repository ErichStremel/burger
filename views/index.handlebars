<h1>Eat the Burger</h1>

<img src="#">

{{#each burger_data}}
{{#unless this.devoured}}
<div>
    <p>{{this.id}}. {{this.burger_name}}</p>
</div>

<div>
    <form class="devour">
        <input type="hidden" class="burgerid" type="text" value={{this.id}}>
        <button type="submit">Devour Burger</button>
    </form>
</div>

{{/unless}}
{{/each}}

<div>
    {{#each burger_data}}
    {{#if this.devoured}}

    <input type="text" placeholder={{this.id}}. {{this.burger_name}} readonly>

    {{/if}}
    {{/each}}
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 enter_section">
            <form action="/burger/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">
                    Submit Burger
                </button>
            </form>
            <p>Create a new burger.</p>
        </div>
    </div>

</div>